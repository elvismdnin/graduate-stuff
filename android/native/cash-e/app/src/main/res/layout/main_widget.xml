<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4CAF50">

    <TextView
            android:id="@+id/appwidget_text"
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:text="@string/widget_debt"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:contentDescription="@string/widget_debt"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="false"
            android:gravity="center_vertical" android:paddingStart="20dp" android:paddingEnd="20dp"/>
    <LinearLayout
            android:id="@+id/sum_buttons"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/appwidget_text" android:layout_centerVertical="false"
            android:layout_alignTop="@+id/appwidget_text">
        <Button
                android:text="@string/sum_100"
                android:layout_width="60dp"
                android:layout_height="35dp" android:id="@+id/button_sum_100"
                android:textSize="10sp" android:padding="0dp"/>
        <Button
                android:text="@string/sum_10"
                android:layout_width="60dp"
                android:layout_height="35dp" android:id="@+id/button_sum_10" android:textSize="10sp"
                android:padding="0dp"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/sub_buttons"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_toEndOf="@+id/sum_buttons"
            android:layout_alignTop="@+id/appwidget_text">
        <Button
                android:text="@string/sub_100"
                android:layout_width="60dp"
                android:layout_height="35dp" android:id="@+id/button_sub_100" android:textSize="10sp"/>
        <Button
                android:text="@string/sub_10"
                android:layout_width="60dp"
                android:layout_height="35dp" android:id="@+id/button_sub_10" android:textSize="10sp"
        />
    </LinearLayout>

</RelativeLayout>