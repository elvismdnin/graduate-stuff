<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/recyclerview_item">

    <TextView
            android:id="@+id/recyclerview_date"
            style="@style/word_title"
            android:text="oie"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light" android:layout_marginStart="5dp"
            android:layout_marginTop="1dp" android:textAlignment="center"/>
    <TextView
            android:id="@+id/recyclerview_value"
            style="@style/word_title"
            android:text="oie"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light" android:layout_marginTop="1dp"
            android:textAlignment="center"/>
</LinearLayout>